<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    tools:context=".MainActivity">


    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintGuide_begin="227dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintGuide_percent="0.6005472" />

    <TextView
        android:id="@+id/reading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/aldrich"
        android:text="Reading1"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/sideViewImageView"
        app:layout_constraintTop_toTopOf="@+id/sideViewImageView" />

    <TextView
        android:id="@+id/reading2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="304dp"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/aldrich"
        android:text="Reading2"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/sideViewImageView"
        app:layout_constraintTop_toTopOf="@+id/sideViewImageView" />

    <TextView
        android:id="@+id/reading3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/aldrich"
        android:text="Reading3"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/sideViewImageView"
        app:layout_constraintTop_toTopOf="@+id/sideViewImageView" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/aldrich"
            android:gravity="center"
            android:text="Overall Health:"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/aldrich"
            android:gravity="center"
            android:text="Total Steps:"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_row="1" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/aldrich"
            android:text="AVERAGE"
            android:textAllCaps="true"
            android:textColor="#FF9800"
            android:textDirection="firstStrong"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/aldrich"
            android:text="9266 / 10000"
            android:textAllCaps="true"
            android:textColor="#3F51B5"
            android:textDirection="firstStrong"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="1" />

    </android.support.v7.widget.GridLayout>

    <ImageView
        android:id="@+id/sideViewImageView"
        android:layout_width="378dp"
        android:layout_height="201dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.601"
        app:srcCompat="@drawable/foot_side" />

    <ImageView
        android:id="@+id/sidePain1"
        android:layout_width="118dp"
        android:layout_height="127dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="84dp"
        app:layout_constraintStart_toStartOf="@+id/sideViewImageView"
        app:layout_constraintTop_toTopOf="@+id/sideViewImageView"
        app:srcCompat="@drawable/gradient" />

    <ImageView
        android:id="@+id/sidePain2"
        android:layout_width="84dp"
        android:layout_height="93dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="@+id/sideViewImageView"
        app:layout_constraintTop_toTopOf="@+id/sideViewImageView"
        app:srcCompat="@drawable/gradient" />

    <ImageView
        android:id="@+id/sidePain3"
        android:layout_width="105dp"
        android:layout_height="100dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/sideViewImageView"
        app:layout_constraintTop_toTopOf="@+id/sideViewImageView"
        app:srcCompat="@drawable/gradient" />

    <ImageView
        android:id="@+id/bottomFootImageView"
        android:layout_width="369dp"
        android:layout_height="181dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintVertical_bias="0.483"
        app:srcCompat="@drawable/foot_bottom" />

    <ImageView
        android:id="@+id/bottomPain1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="@+id/bottomFootImageView"
        app:layout_constraintTop_toTopOf="@+id/bottomFootImageView"
        app:srcCompat="@drawable/gradient" />

    <ImageView
        android:id="@+id/bottomPain2"
        android:layout_width="62dp"
        android:layout_height="66dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="@+id/bottomFootImageView"
        app:layout_constraintTop_toTopOf="@+id/bottomFootImageView"
        app:srcCompat="@drawable/gradient" />

    <ImageView
        android:id="@+id/bottomPain3"
        android:layout_width="50dp"
        android:layout_height="54dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="68dp"
        app:layout_constraintStart_toStartOf="@+id/bottomFootImageView"
        app:layout_constraintTop_toTopOf="@+id/bottomFootImageView"
        app:srcCompat="@drawable/gradient" />

    <SeekBar
        android:id="@+id/transparencyBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:max="225"
        android:progress="0"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/gridLayout"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <Button
        android:id="@+id/toSessionActivityBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/transparencyBar"
        app:layout_constraintStart_toStartOf="@+id/transparencyBar"
        app:layout_constraintTop_toBottomOf="@+id/transparencyBar" />

</android.support.constraint.ConstraintLayout>
